<Window x:Class="Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gui"
        xmlns:vm="clr-namespace:Gui.ViewModels"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="700" Width="1200"
        MinHeight="600" MinWidth="900">

    <Window.Resources>
        <!-- Converter -->
        <local:StatusColorConverter x:Key="StatusColorConverter" xmlns:local="clr-namespace:Gui.Converters"/>

        <!-- 样式定义 -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部工具栏 -->
        <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 文件操作 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="打开Mapping" Command="{Binding LoadMappingCommand}" Style="{StaticResource ButtonStyle}"/>
                    <Button Content="保存" Command="{Binding SaveMappingCommand}" Style="{StaticResource ButtonStyle}"/>
                </StackPanel>

                <!-- 批量操作 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0,0,0">
                    <TextBlock Text="批量操作:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                    <Button Content="标记无字母项"
                            Command="{Binding MarkNonAlphaAsTranslatedCommand}"
                            Style="{StaticResource ButtonStyle}"
                            ToolTip="将所有不包含字母的翻译项标记为已翻译（如纯数字、符号等）"/>
                    <Button Content="正则匹配标记"
                            Command="{Binding MarkByRegexCommand}"
                            Style="{StaticResource ButtonStyle}"
                            ToolTip="使用正则表达式批量标记匹配的翻译项"/>
                </StackPanel>

                <!-- 统计信息 -->
                <TextBlock Grid.Column="2" Text="{Binding StatisticsText}"
                          VerticalAlignment="Center" HorizontalAlignment="Right"
                          FontSize="13" Margin="0,0,10,0"/>
            </Grid>
        </Border>

        <!-- 过滤栏 -->
        <Border Grid.Row="1" Background="White" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="筛选:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <RadioButton Content="全部" IsChecked="True" Command="{Binding FilterAllCommand}"
                                Margin="5,0" VerticalAlignment="Center"/>
                    <RadioButton Content="待翻译" Command="{Binding FilterPendingCommand}"
                                Margin="5,0" VerticalAlignment="Center"/>
                    <RadioButton Content="已翻译" Command="{Binding FilterTranslatedCommand}"
                                Margin="5,0" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="搜索:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                            MinWidth="200" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主内容区 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="200"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="350" MinWidth="250"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：翻译列表 -->
            <Border Grid.Column="0" BorderBrush="#DDDDDD" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="翻译列表" Style="{StaticResource HeaderTextStyle}"
                              Margin="10,10,10,5"/>

                    <ListBox Grid.Row="1" ItemsSource="{Binding FilteredTranslations}"
                            SelectedItem="{Binding SelectedTranslation}"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" BorderBrush="#EEEEEE" BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                                            <TextBlock Text="{Binding StatusText}" FontWeight="Bold" FontSize="11"
                                                      Foreground="{Binding IsTranslated, Converter={StaticResource StatusColorConverter}}"/>
                                            <TextBlock Text=" | " Margin="5,0"/>
                                            <TextBlock Text="{Binding TypeText}" FontSize="11" Foreground="Gray"/>
                                        </StackPanel>

                                        <TextBlock Grid.Row="1" Text="{Binding Source}"
                                                  TextWrapping="Wrap" FontWeight="SemiBold" Margin="0,4,0,2"/>

                                        <TextBlock Grid.Row="2" Text="{Binding Target}"
                                                  TextWrapping="Wrap" Foreground="#666666" FontSize="12"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#EEEEEE"/>

            <!-- 中间：翻译编辑区 -->
            <Border Grid.Column="2" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="翻译编辑" Style="{StaticResource HeaderTextStyle}"/>

                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="源文本 (Source):" FontWeight="Bold" Margin="0,0,0,5"/>
                        <Border Grid.Row="1" Background="#F9F9F9" BorderBrush="#DDDDDD"
                               BorderThickness="1" Padding="8" Margin="0,0,0,15">
                            <TextBlock Text="{Binding SelectedTranslation.Source}"
                                      TextWrapping="Wrap" FontSize="13"/>
                        </Border>

                        <TextBlock Grid.Row="2" Text="翻译 (Target):" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Grid.Row="3" Text="{Binding SelectedTranslation.Target, UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap" AcceptsReturn="True" MinHeight="80"
                                VerticalScrollBarVisibility="Auto" FontSize="13"/>
                    </Grid>

                    <GroupBox Grid.Row="2" Header="翻译信息" Margin="0,10,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="类型: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedTranslation.TypeText}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="状态: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedTranslation.StatusText}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="使用次数: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedTranslation.UsageCount}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Key: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedTranslation.Key}"
                                          FontFamily="Consolas" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <Grid Grid.Row="3" Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 导航按钮 -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                            <Button Content="上一个" Command="{Binding PreviousTranslationCommand}"
                                   Style="{StaticResource ButtonStyle}"/>
                            <Button Content="下一个" Command="{Binding NextTranslationCommand}"
                                   Style="{StaticResource ButtonStyle}"/>
                        </StackPanel>

                        <!-- 状态标记按钮 -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Command="{Binding MarkAsTranslatedCommand}"
                                   Style="{StaticResource ButtonStyle}"
                                   Background="#4CAF50" Foreground="White"
                                   BorderBrush="#4CAF50">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✓ " FontWeight="Bold"/>
                                    <TextBlock Text="标记为已翻译"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding MarkAsPendingCommand}"
                                   Style="{StaticResource ButtonStyle}"
                                   Background="#FF9800" Foreground="White"
                                   BorderBrush="#FF9800">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⏸ " FontWeight="Bold"/>
                                    <TextBlock Text="标记为待翻译"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch" Background="#EEEEEE"/>

            <!-- 右侧：代码上下文 -->
            <Border Grid.Column="4" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="200" MinHeight="100"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="代码上下文" Style="{StaticResource HeaderTextStyle}"/>

                    <StackPanel Grid.Row="1" Margin="0,0,0,10">
                        <TextBlock Text="项目源码路径:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Text="{Binding ProjectSourcePath}" IsReadOnly="True"/>
                            <Button Grid.Column="1" Content="浏览..." Command="{Binding BrowseProjectPathCommand}"
                                   Padding="8,4" Margin="5,0,0,0"/>
                        </Grid>
                    </StackPanel>

                    <GroupBox Grid.Row="2" Header="使用位置">
                        <ListBox ItemsSource="{Binding SelectedTranslation.Contexts}"
                                SelectedItem="{Binding SelectedContext}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="5" BorderBrush="#EEEEEE" BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding FilePath}" FontWeight="Bold"
                                                          TextWrapping="Wrap" FontSize="12"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                    <TextBlock Text="行号: " FontSize="11" Foreground="Gray"/>
                                                    <TextBlock Text="{Binding LineNumber}" FontSize="11" Foreground="Gray"/>
                                                    <TextBlock Text=" | " Margin="5,0" FontSize="11" Foreground="Gray"/>
                                                    <TextBlock Text="{Binding CodeContext}" FontSize="11"
                                                              Foreground="Gray" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <Button Grid.Column="1" Content="📝" ToolTip="在编辑器中打开"
                                                   Command="{Binding DataContext.OpenInEditorCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                   CommandParameter="{Binding}"
                                                   Padding="4" Margin="5,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </GroupBox>

                    <GridSplitter Grid.Row="3" Height="5" HorizontalAlignment="Stretch" Background="#EEEEEE"/>

                    <GroupBox Grid.Row="4" Header="代码预览">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <TextBox Text="{Binding CodePreview, Mode=OneWay}"
                                    FontFamily="Consolas" FontSize="11"
                                    IsReadOnly="True" BorderThickness="0"
                                    Background="Transparent"
                                    TextWrapping="NoWrap"/>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </Border>
        </Grid>

        <!-- 底部状态栏 -->
        <Border Grid.Row="3" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0" Padding="10,5">
            <TextBlock Text="就绪" FontSize="12" Foreground="#666666"/>
        </Border>
    </Grid>
</Window>
